<dashboard script="setup.js">
  <label>Website Monitoring Setup</label>
  <row>
    <panel>
      <title>Manage URLs to Monitor</title>
      <html>
        <div id="url-config">
          <ul id="url-list"></ul>
          <input type="text" id="new-url" placeholder="Enter URL (https://...)" />
          <button id="add-url">Add URL</button>
          <p id="save-status" style="margin-top:1em;"></p>
        </div>
      </html>
    </panel>
  </row>
</dashboard>
